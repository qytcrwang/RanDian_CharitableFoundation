<view class="page">
  <view class="news" wx:for="{{datas}}">
    <navigator url="/pages/case/detail?id={{item.id}}">
      <view class="item bdbt">
        <view class="tit">{{item.title}}</view>
        <view class="riqi">{{item.add_time}}</view>
      </view>
    </navigator>
  </view>

</view>

<view bindtap="more" data-type="{{type}}" wx:if="{{datas!=''&&more==1}}" class="more">查看更多</view>
<view wx:if="{{datas!=''&&more==0}}" class="nomore">没有数据了</view>

<view class="jszc">技术支持：海天应用（www.xmdeal.com）</view>
<view style="height:100rpx;"></view>

<view class="footer">

  <view class="lt">
    <image src="/img/yj.png"></image><text>在线咨询</text></view>
  <view class="rt" style="background:{{color}}">
    <image src="/img/tel.png"></image><text>拨打电话</text></view>
</view>