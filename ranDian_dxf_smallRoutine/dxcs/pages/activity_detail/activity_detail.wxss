.container {
    padding: 0;
    font-size: 14rpx;
    background: #FFFFFF;
    color: #000;
}

.activity-title {
    /* text-align: center; */
    /* position: relative; */
    width: 90%;
    padding: 40rpx 5rpx 10rpx;
    /* background: #1AFA29; */
    color:#333333;
    font-size: 40rpx;
    line-height: 48rpx;
    font-weight: bold;
}

.read{
    text-align:right;
    width: 650rpx;
    padding: 0rpx 50rpx 15rpx;
    color: #ADAEB3;
    font-size: 38rpx;
    line-height: 48rpx;
}
.read_count_icon{
    margin-right: 13rpx;
}

.read_text{
    font-size: 28rpx;
    color: #ADAEB3;
}
.read image{
    height: 33rpx;
    margin-bottom: -3rpx;
}

.activity-content{
    padding: 30rpx 40rpx;
    background: #ffffff;
}
.body_text{
    font-size: 32rpx;
    color: #333333;
    line-height: 44rpx;
    text-indent:2em;
}
.activity-content image{
    width: 100%;
    height: 350rpx;
    margin: 20rpx 0;
    border-radius:15rpx;
}
.message_other{
    padding-bottom: 30rpx;
    padding: 30rpx 40rpx;
    background: #ffffff;
    font-size: 32rpx;
    color: #454545;
    line-height: 44rpx;
    /* font-weight:bold */
}
