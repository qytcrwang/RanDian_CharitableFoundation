.container {
    padding: 0;
    font-size: 14rpx;
    background: #F0F4F3;
    color: #000;
}

.activity-title {
    /* text-align: center; */
    position: relative;
    width: 650rpx;
    padding: 40rpx 50rpx 10rpx;
    background: #1AFA29;
    color: #000;
    font-size: 38rpx;
    line-height: 48rpx;
}

.read{
    position: relative;
    width: 650rpx;
    padding: 0rpx 50rpx 15rpx;
    background: #1AFA29;
    color: #000;
    font-size: 38rpx;
    line-height: 48rpx;
}

.read text{
    float: right;
    font-size: 32rpx;
    color: #ffffff;
}


.activity-content{
    padding: 30rpx 40rpx;
    background: #ffffff;
}
.body_text{
    font-size: 32rpx;
    color: #454545;
    line-height: 44rpx;
    text-indent:2em;
}
.activity-content image{
    width: 100%;
    height: 350rpx;
    margin: 20rpx 0;
    border-radius:15rpx;
}
.message_other{
    padding-bottom: 30rpx;
    padding: 30rpx 40rpx;
    background: #ffffff;
    font-size: 32rpx;
    color: #454545;
    line-height: 44rpx;
    font-weight:bold
}

.good_num{
    float: right;
}
.read_count_icon{
    width: 45rpx;
    height: 26rpx;
}
.good .good_count_icon{
    width: 40rpx;
    height: 40rpx;
    float: right;
}
.good .good_count_icon_activity{
    width: 40rpx;
    height: 40rpx;
    float: right;
}



.join-wrap {
    width:100%;
    height: 100rpx;
    background-color: #04BE02;
  }
.join {
    bottom: 0;
    left: 0;
    width: 100%;
    height: 98rpx;
    background: #04BE02;
    font-size: 40rpx;
    line-height: 98rpx;
    color: #ffffff;
    border-radius:0;
}