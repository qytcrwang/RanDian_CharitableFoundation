/* pages/mine/mine.wxss */
@import "../template/template.wxss";
page{
  background: #ededed;
}
.mine_info{
  width: 100%;
  height: 388rpx;
  margin-top:4rpx;
  position: relative;
}
.mine_banner{
  width: 100%;
  height: 272rpx;
  display: block;
}
.mine_info_head{
  width: 94%;
  height: 218rpx;
  margin: auto;
  background: #ffffff;
  position: absolute;
  top:170rpx;
  left:0;
  right: 0;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-around;
}
.mine_head_left,.mine_head_right{
  width: 33%;
  height: 78rpx;
  margin-top: 72rpx;
}
.mine_head_leftPic,.mine_head_rightPic{
  width: 32rpx;
  height: 38rpx;
  display: block;
  margin:auto;
}
.mine_head_leftDes,.mine_head_rightDes{
  text-align: center;
  font-size: 26rpx;
  line-height: 26rpx;
  margin-top: 16rpx;
  color:#333333;
}
.mine_head_center{
  width: 34%;
  height: 100%;
  position: relative;
}
.jiange{
  width: 2rpx;
  height: 30rpx;
  background: #e6e6e6;
  box-sizing: border-box;
  margin-top: 100rpx;
}
.headBorder{
  position: absolute;
  width: 166rpx;
  height: 166rpx;
  background: #ffffff;
  border-radius: 50%;
  top:-79rpx;
  left:0;
  right: 0;
  margin: auto;
}
.Head{
  width: 158rpx;
  height: 158rpx;
  display: block;
  clip-path: circle(79rpx at center); 
  margin: 4rpx auto;
}
.dian{
  width: 100rpx;
  height: 98rpx;
}
.nameBox{
  width: 100%;
  height: 34rpx;
  position: relative;
}
.name{
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  margin:auto;
  position: absolute;
  left:0;
  right: 0;
  top:0;
}
.lv{
  width: 130rpx;
  height: 40rpx;
  font-size: 22rpx;
  margin:24rpx auto;
  border-radius: 20rpx;
  background: #3d4663;
  text-align: center;
  line-height: 40rpx;
  color: #ffffff;
}
.list_content{
  width: 94%;
  height: 738rpx;
  background: #ffffff;
  margin:16rpx auto;
  border-radius: 8rpx;
}
.list{
  width: 92%;
  margin:auto;
  height: 96rpx;
  border-bottom: 2rpx solid #e6e6e6;
  display: flex;
  justify-content: space-between;
}
.list_left{
  width: 168rpx;
  height: 34rpx;
  display: flex;
  justify-content: space-between;
  margin: 36rpx 0 0 10rpx;
}
.listIcon{
  width: 34rpx;
  height: 34rpx;
}
.listName{
  line-height: 34rpx;
  font-size: 26rpx;
  color: #404040;
}
.jiantou{
  width: 16rpx;
  height: 28rpx;
  margin-top: 30rpx;
}
.list_right{
  width: 84rpx;
  height: 28rpx;
  display: flex;
  justify-content: space-between
}
.check{
  font-size: 24rpx;
  line-height: 28rpx;
  color:#999999;
  margin-top: 30rpx;
}
.signOut{
  width: 84%;
  height: 78rpx;
  margin: auto;
  font-size: 30rpx;
  color: #ffffff;
  border-radius: 39rpx;
  background: #3e4663;
  margin-top: 240rpx;
}
