/* pages/goods/goods.wxss */
page{
  background: #ededed;
  height: 100%;
  /* padding-bottom: 88rpx; */
  /* position: relative; */
}
.swiper-tab{ 
  position: fixed; 
  top:0;
  left: 0;
  width: 100%;  
  /* margin-top: 2rpx; */
  text-align: center;  
  line-height: 88rpx;
  height: 88rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  z-index: 999;
}  
.tab_item_blank{
  width: 100%;
  height: 90rpx;
}
.tab-item{
  width: 33%;
  height: 100%;
  font-size: 24rpx;
  font-weight: bold;
  color: #888888; 
}
.active{
  color: #3d4663;  
  border-bottom: 2rpx solid #3d4663;
}
.show{
  display: block
}
.hidden{
  display: none;
}
.none_activity{
  width: 94%;
  height: 150rpx;
  margin: 16rpx auto;
  display: flex;
  justify-content: center;
}
.none_activity_text{
  font-size: 32rpx;
  color: #888888;
}
.list{  
  width: 94%;
  height: 248rpx;
  margin: 16rpx auto;
  background: #ffffff;
  border-radius: 8rpx;
}  
.list_top{
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  overflow: hidden
}
.list_bottom{
  width: 100%;
  height: 54rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.numAndTime{
  width: 514rpx;
  height: 98rpx;
  margin: 30rpx 0 0 30rpx;
  display: flex;
}
.numInfo{
  width: 380rpx;
  height: 98rpx;
  font-size: 32rpx;
  color: #3d4663;
}
.numPic{
  width: 130rpx;
  height: 90rpx;
  display: block;
  margin:0 14rpx 0 0;
  float: left
}
.num{
  font-weight: bold;
  /* float: left */
}
.time{
  line-height: 24rpx;
  font-size: 24rpx;
  margin-top: 16rpx;
  color:#888888;
}

.state{
  width: 140rpx;
  height: 54rpx;
  background: #04BE02;
  font-size: 26rpx;
  line-height: 54rpx;
  text-align: center;
  color:#ffffff;
  border-top-left-radius: 27rpx;
  border-bottom-left-radius: 27rpx;
  margin-top: 34rpx;
}
.integral{
  width: 200rpx;
  height: 50rpx;
  
  line-height: 50rpx;
  margin-left: 30rpx;
}
.integral_text{
  color: #888888; 
  font-size: 24rpx;
}
.integral_num{
  font-size: 24rpx;
  color: #04BE02;
}
.detail_btn{
  width: 160rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 25rpx;
  border:1rpx solid #04BE02;
  color: #04BE02;
  float: right;
  margin-right: 20rpx;
}
.detail_btn::after{
  border:none
}
.on{
  display: block
}
.none{display: none}